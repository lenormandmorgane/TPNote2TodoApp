{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Task Details</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="bg-light">Id</th>
                    <td>{{ task.id }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Title</th>
                    <td>{{ task.title }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Description</th>
                    <td>{{ task.description }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Status</th>
                    <td>
                        <span class="badge {% if task.status %}bg-success{% else %}bg-danger{% endif %}">
                            {{ task.status ? 'Yes' : 'No' }}
                        </span>
                    </td>
                </tr>
                <tr>
                    <th class="bg-light">Created at</th>
                    <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex gap-2">
            <a href="{{ path('app_task_index') }}" class="btn btn-secondary">Back to list</a>
            <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-warning">Edit</a>
            {{ include('task/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
